{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 m-md-auto register d-flex">
            <div class="m-auto w-100">
                <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>
                <div class="bg-white p-3 rounded">
                    {% for flashError in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}

                    {{ form_start(registrationForm) }}
                        <label>{{ form_label(registrationForm.email) }}</label><br>
                        {{ form_widget(registrationForm.email) }}<br>
                        <label class="mt-3">{{ form_label(registrationForm.plainPassword) }}</label><br>
                        {{ form_widget(registrationForm.plainPassword) }}<br><br>
                        {{ form_widget(registrationForm.agreeTerms) }} <label>{{ form_label(registrationForm.agreeTerms) }}</label>

                        <button class="btn btn-lg btn-success mt-3 w-100 p-0" type="submit">
                            Valider
                        </button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
